Vagrant.configure("2") do |config|
  # Use the Ubuntu 20.04 (Focal Fossa) base box
  config.vm.box = "ubuntu/focal64"

  # Configure the virtual machine's resources
  config.vm.provider "virtualbox" do |vb|
    vb.memory = "4096"
    vb.cpus = 2
  end

  # Customize the VM name
  config.vm.define "ubuntu_vm" do |ubuntu_vm|
    ubuntu_vm.vm.hostname = "ubuntu-vm"
  end

  # Add a host-only network adapter with a static IP
  config.vm.network "private_network", ip: "192.168.56.10"

  # Set up port forwarding for SSH and the Minikube dashboard
  config.vm.network "forwarded_port", guest: 22, host: 2222, auto_correct: true
  config.vm.network "forwarded_port", guest: 44667, host: 2200, auto_correct: true

  # Optional: Configure a synced folder for sharing files between host and guest
  # config.vm.synced_folder "./data", "/vagrant_data"
end
